    }
	#status_command ~/.config/i3/bumblebee-status/bumblebee-status -m disk:root disk:home cpu memory uptime battery brightness amixer layout date time -p root.path=/ home.path=/home time.format="%H:%M:%S" date.format="%a, %b %d %Y" -t greyish-powerline
	
